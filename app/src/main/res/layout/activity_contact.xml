<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactActivity"
    android:background="@color/white">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="190dp"
            android:background="#721F19"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/headerbg" />

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:fontFamily="@font/helvetica"
            android:text="Contact Compass"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/profile_photo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/profile_photo" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_photo"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="35dp"
            android:src="@drawable/logogazelle1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/copyright"
            android:layout_width="120dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/textcompass" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/copyright"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView37"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="160dp"
                            android:fontFamily="@font/helvetica"
                            android:gravity="center"
                            android:text="CONNECT WITH US"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageButton
                            android:id="@+id/btnWa"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginTop="40dp"
                            android:background="@color/white"
                            android:scaleType="fitCenter"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView37"
                            app:srcCompat="@drawable/wa" />

                        <ImageButton
                            android:id="@+id/btnIg"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="40dp"
                            android:background="@color/white"
                            android:scaleType="fitCenter"
                            app:layout_constraintStart_toEndOf="@+id/btnWa"
                            app:layout_constraintTop_toBottomOf="@+id/textView37"
                            app:srcCompat="@drawable/ig" />

                        <ImageButton
                            android:id="@+id/btnYt"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="40dp"
                            android:background="@color/white"
                            android:scaleType="fitCenter"
                            app:layout_constraintStart_toEndOf="@+id/btnIg"
                            app:layout_constraintTop_toBottomOf="@+id/textView37"
                            app:srcCompat="@drawable/ytt" />

                        <ImageButton
                            android:id="@+id/btnFb"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="40dp"
                            android:background="@color/white"
                            android:scaleType="fitCenter"
                            app:layout_constraintStart_toEndOf="@+id/btnYt"
                            app:layout_constraintTop_toBottomOf="@+id/textView37"
                            app:srcCompat="@drawable/fb" />

                </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>